body
  font-family: "Source Sans Pro"
  background-color: #E0E6E9
  margin: 0

blue = #009CDF
gray-separator = rgba(0, 0, 0, .05)

.app
  display: flex
  flex-direction: column
  height: 100vh

.header
  display: flex
  background: blue
  justify-content: center


.logo
  color: white
  //font-weight: bold
  padding: 10px 20px
  font-size: 1.3rem

.header-wrapper
  max-width: 1200px
  flex: 1
  display: flex
  align-items: center

  input[type="text"]
    width: 100%
    height: 30px
    background: #4DB9E8
    border: none
    outline: none
    border-radius: 3px
    box-sizing: border-box
    color: white
    font-size: 1rem
    padding: 0 10px
    &::placeholder
      color: rgba(255, 255, 255, .4)

.list
  background: white
  margin: 10px
  border-radius: 2px
  box-shadow: 0px 1px 10px rgba(0, 0, 0, .1)
  padding: 10px
  flex: 1
  overflow: auto

.li
  //margin: 5px
  padding: 15px
  border-bottom: 3px gray-separator solid
  a
    text-decoration: none
    padding: 2px 5px
    margin: 0 2px
    border: 1px rgba(0, 0, 0, .05) solid
    border-radius: 2px
    color: rgba(0, 0, 0, .3)

    &:hover
      color: white
      background: blue

.separator
  height: 10px
  background: gray-separator


.elementName
  display: inline-block
  margin-left: 10px

.li:last-child
  border: none



.linksButton
  background: #027AAE
  color: white
  border-radius: 3px
  align-self: center
  padding: 5px 10px
  margin: 0 0 0 20px
  height: 30px
  display: flex
  align-items: center
  cursor: pointer
  box-sizing: border-box

.photoProfile
  height: 25px
  width:  25px
  align-self: center
  border-radius: 50%
  margin: 0 20px


  

